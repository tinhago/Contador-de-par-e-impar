#include <stdio.h>

int main()
{
  int valor1,valor2,valor3,contp=0,conti=0;
  printf("\n Informe o primeiro valor inteiro ");
  scanf ("%d", & valor1);
    if ((valor1 %2)==0)
    {
        contp++;
    }else
    {
        conti++;
    }
    printf("\n Informe o segundo valor inteiro ");
  scanf ("%d", & valor2);
    if ((valor2 %2)==0)
    {
        contp++;
    }else
    {
        conti++;
    }
    printf("\n Informe o terceiro valor inteiro ");
  scanf ("%d", & valor3);
    if ((valor3 %2)==0)
    {
        contp++;
    }else
    {
        conti++;
    }
    printf("Encontrados %d par e %d impar.",contp,conti);




  return 0;
}
